<%- include("partials/header"); -%>

<h1>Home</h1>
<p><%= homeContent %></p>

<% for (let i=0; i<posts.length; i++) { %>
    <div class="post-content">
        <h2><%= posts[i].title %></h2>
        <% if (posts[i].content.length > 100 ) { %>
           <p><%= (posts[i].content.substring(0, 100) + "...") %><a href="/posts/<%=posts[i].title%>">Read More</a></p>
        <% } else { %>
        <p><%= posts[i].content %></p>
        <% } %>
    </div>
<% } %>
<a href="/compose"><button class="btn btn-primary">Write a New Post</button></a>

<%- include("partials/footer"); -%>